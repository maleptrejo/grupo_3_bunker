<!DOCTYPE html>
<html lang="es">
<%- include(`partials/head`, {title: `Inicio`}) %>
        <main class="container">
            <div class="row">
                <div class="col-6 bks-controlPanelForm">
                    <form action="/products/categoryphoto" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <h3>Categorias:</h3>
                            <label for="categorySelect">Categorias Disponibles</label>
                            <select multiple class="form-control mb-3" id="categorySelect" name="categorySelect">
                                <% for (let i=0; i<categories.length ; i++) { %>
                                    <option value="<%= categories[i].id %>"><%= categories[i].name %></option>
                                <% } %>
                            </select>
                            <input name="categoryImage" class="my-2 form-input" type="file" id="categoryImage" disabled>
                        </div>
                        <div class="alert alert-success" role="alert" style="display: none;" id="categoryAlert">Informaci√≥n enviada</div>
                        <button type="submit" class="btn btn-secondary" id="categoryBtn" disabled>Modificar</button>    
                    </form>
                </div>
            </div>
        </main>
        <script src="../../scripts/categoryphotoValidator.js"></script>
        <%- include(`partials/footer`) %>    
    </body>	
</html>