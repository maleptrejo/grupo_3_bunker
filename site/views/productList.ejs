<!DOCTYPE html>
<html lang="es">

<%- include(`partials/head`, {title: `Inicio`}) %>


<main>
    <div class="container">
        <div aria-label="breadcrumb rounded-0 ">
            <ol class="breadcrumb pl-0 bg-white">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/users/control">Panel de control</a></li>
                <li class="breadcrumb-item"><a href="/products">Products</a></li>
               
            </ol>
        </div>
    </div> 
    
    <!-- ****vision mobile****** -->
    <% for (let i=0; i<productoDetallado.length ; i++) { %>
        <section class="container producto-mobile ">
            <div class="row">
                <div class="col">
                    <div class="descripcion-producto mb-5 mt-4">
                        <div class="producto-titulo ">
                            <h2 class=""><%= productoDetallado[i].name %></h2>
                        </div>
                        <div class="producto-marca">
                            <h4>Marca: <%= productoDetallado[i].brands.name %> - Categor√≠a: <%= productoDetallado[i].categories.name %></h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
                        <div class="carousel-inner carousel-prod">
                            <div class="carousel-item active ">
                                <img src="../images/productos/<%= productoDetallado[i].image1 %>" class="d-block w-60 imagen-carousel" alt="...">
                                
                            </div>
                            <div class="carousel-item">
                                <img src="../images/productos/<%= productoDetallado[i].image2 %>" class="d-block w-60" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="../images/productos/<%= productoDetallado[i].image3 %>" class="d-block w-60" alt="...">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <div class="col">
                    <div class="container-fluid detalles-producto mt-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="datos-prod">
                                    <div class="precio-producto">
                                        <h3>$ <%= productoDetallado[i].price %></h3>
                                        <div class="wrap">
                                            <h4>Descuento del <%= productoDetallado[i].discounts.level*100 %> %</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                
                              
                                   
                                

                                <div>
                                        <div class="button-container-submit">
                                                <button class="btn btn-secondary btn-block  mb-5 mt-5 " type="button"><a href="/products/<%= productoDetallado[i].id%>/edit">Editar</a></button>
                                        </div>
                                        <form action="/products/<%= productoDetallado[i].id %>?_method=DELETE" method="post">
                                            <button class="btn btn-secondary btn-block  mb-5 mt-5 " type="submit">Eliminar</button>
                                        </form>
                                    </div>

                                   
                                        
                                </div>
                
                                
        
                            </div>
                        </div>
                        <div class="descripcion-producto mt-5">
                            <div class="mb-5">
                                <h3>Especificaciones</h3>
                            </div>
                            <div class="container mt-3 mb-5">
                                <p>
                                    <%= productoDetallado[i].description %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                 
            </div>
        </section>
    <% } %>
            
            <!-- *****vision desktop****** -->
            
            
            
            <!-- *****relacionados***** -->
            
            <section class=" container">
                <div>
                    <h3 class="font-weight-bold mb-3">Productos relacionados</h3>
                </div>
                
                
            </section>
        </main>
        <%- include(`partials/footer`) %>
        
    </body>	
    </html>